  "moduleFlows": {
    "/org-dashboard/profile": [
      {
        "title": "Complete organization profile",
        "steps": [
          "Open Organization Profile",
          "Upload organization logo (optional)",
          "Fill basic details (name, email, phone)",
          "Add registration and compliance information",
          "Provide address and areas of operation",
          "Save changes and complete any missing required fields"
        ]
      }
    ],
    "/org-dashboard/programs": [
      {
        "title": "Create a program",
        "steps": [
          "Open Programs",
          "Click Create Program",
          "Enter name and description",
          "Choose theme/sector and timeframe",
          "Set baseline and targets (optional)",
          "Save the program"
        ]
      },
      {
        "title": "Link projects to a program",
        "steps": [
          "Create or open a project",
          "In Basic Details, select the Program",
          "Save project to associate"
        ]
      }
    ],
    "/org-dashboard/projects": [
      {
        "title": "Create a project",
        "steps": [
          "Open Projects → New Project",
          "Fill Basic Details (name, code, description, timeline)",
          "Assign a Program (optional)",
          "Set beneficiaries and themes",
          "Switch to Funding tab and add donors",
          "Review and submit"
        ]
      },
      {
        "title": "Manage project status",
        "steps": [
          "Open Projects",
          "Use status control on a row",
          "Select new status (requires permissions)"
        ]
      }
    ],
    "/org-dashboard/indicators": [
      {
        "title": "Create an indicator",
        "steps": [
          "Open Indicators",
          "Click New Indicator",
          "Provide name, unit, and baseline",
          "Set target and disaggregation (if used)",
          "Save and verify in the table"
        ]
      },
      {
        "title": "Assign indicator to objectives/projects",
        "steps": [
          "Open related Objective or Project",
          "Use indicator linking option (where available)",
          "Confirm and save"
        ]
      }
    ],
    "/org-dashboard/objectives": [
      {
        "title": "Create objectives hierarchy",
        "steps": [
          "Open Objectives",
          "Click Create Objective",
          "Select level (Goal/Outcome/Output/Activity)",
          "Choose assignment (Org/Program/Project)",
          "Add description and code",
          "Save"
        ]
      }
    ],
    "/org-dashboard/activities": [
      {
        "title": "Schedule an activity",
        "steps": [
          "Open Activities",
          "Click New Activity",
          "Enter title, due date, and type",
          "Assign owner (optional)",
          "Set status and save"
        ]
      },
      {
        "title": "Update activity status",
        "steps": [
          "Open Activities",
          "Find the activity in list",
          "Change status (upcoming/in progress/completed)"
        ]
      }
    ],
    "/org-dashboard/plans": [
      {
        "title": "Create a plan",
        "steps": [
          "Open Plans",
          "Click Create Plan",
          "Fill plan details and timeframe",
          "Save to generate plan entry",
          "Use View dialog to review"
        ]
      }
    ],
    "/org-dashboard/team": [
      {
        "title": "Add a team member",
        "steps": [
          "Open Team",
          "Click Add Member",
          "Enter name, email, and role",
          "Save to invite/add member"
        ]
      },
      {
        "title": "Edit a team member",
        "steps": [
          "Open Team",
          "Use row actions → Edit",
          "Update role or details",
          "Save"
        ]
      }
    ],
    "/org-dashboard/intervention-area": [
      {
        "title": "Add an intervention area",
        "steps": [
          "Open Intervention Areas",
          "Click Add Intervention",
          "Enter name and optional metadata",
          "Save"
        ]
      },
      {
        "title": "Filter areas",
        "steps": [
          "Open Intervention Areas",
          "Use filters/faceted controls above table",
          "Adjust columns using View options"
        ]
      }
    ],
    "/org-dashboard/reports": [
      {
        "title": "Create a report",
        "steps": [
          "Open Reports",
          "Click Create Report",
          "Enter report title and scope",
          "Save and open View dialog to preview"
        ]
      }
    ],
    "/org-dashboard/analytics": [
      {
        "title": "Review analytics",
        "steps": [
          "Open Analytics",
          "Review charts and trends",
          "Use filters (if available) to refine"
        ]
      }
    ],
    "/org-dashboard/settings": [
      {
        "title": "Configure settings",
        "steps": [
          "Open Settings",
          "Adjust organization preferences",
          "Review permissions (if you are an admin)",
          "Save changes"
        ]
      }
    ]
  },
